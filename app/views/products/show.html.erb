<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>


  </article>

  <header class="page-header">
    <h1>Reviews:</h1>
    <h3><%= link_to "Review this product", "/reviews" %></h3>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <% @product.product_ratings.each do |review|%>
          <dt>Rating: </dt>
          <dd><%= create_rating_stars(review.rating)%></dd>
          <dt>Description</dt>
          <dd><%= review.description%></dd>
          <dt>Submitted by:</dt>
          <% if review.user_id %>
          <dd><%= current_user.email%></dd>
          <% end %>
          <dt>_______________</dt>
          <dd>______________________________________________________________________________________</dd>
          <% end %>
        </dl>
      </div>
    </div>


  </article>
</section>
